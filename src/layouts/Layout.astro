---
interface Props {
	title: string;
}

const { title } = Astro.props;
import "../assets/app.css";
---

<!doctype html>
<html lang="en" data-theme="autumn">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="DEMOCRAFT STUDIOS - Minecraft Server Studio Coming Soon" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Minecraft&family=Rubik:wght@400;500;700&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--font-minecraft: 'Minecraft', system-ui, sans-serif;
		--font-body: 'Rubik', system-ui, sans-serif;
	}
	html {
		font-family: var(--font-body);
	}
	h1, h2, h3 {
		font-family: var(--font-minecraft);
	}
	.glass {
		background: rgba(255, 255, 255, 0.1);
		backdrop-filter: blur(10px);
		-webkit-backdrop-filter: blur(10px);
		border: 1px solid rgba(255, 255, 255, 0.2);
	}
</style>
