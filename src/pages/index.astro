---
import Layout from '../layouts/Layout.astro';
import CountdownTimer from '../components/CountdownTimer.astro';
import NewsletterSignup from '../components/NewsletterSignup.astro';
---

<Layout title="Coming Soon | DEMOCRAFT STUDIOS">
	<main class="min-h-screen flex flex-col items-center justify-center relative overflow-hidden py-10 px-4">
		<!-- Background with overlay -->
		<div class="absolute inset-0 z-0">
			<img 
				src="/banner.jpg" 
				alt="Minecraft landscape" 
				class="w-full h-full object-cover"
			/>
			<div class="absolute inset-0 bg-black/40"></div>
		</div>

		<!-- Content container with glassmorphism -->
		<div class="relative z-10 w-full max-w-4xl mx-auto">
			<div class="glass p-8 md:p-12 rounded-2xl shadow-2xl">
				<div class="text-center mb-10">
					<div class="flex justify-center mb-6">
						<img src="/studio.png" alt="DEMOCRAFT STUDIOS" class="h-16 md:h-32" />
					</div>
					<h1 class="text-4xl md:text-6xl font-bold text-primary-content mb-4">
						DEMOCRAFT <span class="text-primary">STUDIOS</span>
					</h1>
					<p class="text-xl text-base-content/80 max-w-2xl mx-auto">
						We're building something epic. Our Minecraft server studio is under construction.
						Stay tuned for amazing gaming experiences coming your way!
					</p>
				</div>

				<CountdownTimer targetDate="2025-07-20T00:00:00" />

				<div class="mt-12 glass p-6 rounded-xl">
					<h2 class="text-2xl font-bold text-primary-content mb-4">Get Notified When We Launch</h2>
					<NewsletterSignup />
				</div>

				<div class="mt-10 flex justify-center gap-6">
					<a href="https://discord.gg/" class="btn btn-ghost btn-circle">
						<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-6 h-6">
							<path d="M9 12h6m-6 4h6m-3-8v8m9-4c0 4.97-4.03 9-9 9s-9-4.03-9-9 4.03-9 9-9 9 4.03 9 9z"></path>
						</svg>
						<span class="sr-only">Discord</span>
					</a>
					<a href="https://twitter.com/" class="btn btn-ghost btn-circle">
						<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-6 h-6">
							<path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"></path>
						</svg>
						<span class="sr-only">Twitter</span>
					</a>
					<a href="https://instagram.com/" class="btn btn-ghost btn-circle">
						<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-6 h-6">
							<rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect>
							<path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
							<line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line>
						</svg>
						<span class="sr-only">Instagram</span>
					</a>
				</div>
			</div>
		</div>

		<footer class="relative z-10 mt-10 text-base-content/60 text-sm">
			&copy; 2024 DEMOCRAFT STUDIOS. All rights reserved.
		</footer>
	</main>
</Layout>

